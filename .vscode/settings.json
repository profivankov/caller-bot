{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	},
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.eslint": "never" // Disable fixAll for TypeScript files
		}
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact"
		// You can still keep it enabled for other file types if needed
	],
	// Changes all ESLint complaints to yellow so it would be easier to separate from TS errors
	"eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
	"typescript.tsdk": "./node_modules/typescript/lib"
}
